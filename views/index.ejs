      crossorigin="anonymous"
    ></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/helpers/comments.js"></script>
    <script type="text/javascript" src="/scripts/helpers/likes.js"></script>
    <script type="text/javascript" src="/scripts/helpers/ratings.js"></script>
    <script type="text/javascript" src="/scripts/helpers/logout.js"></script>

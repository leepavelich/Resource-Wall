    <script type="text/javascript" src="/scripts/app.js"></script>

    <!--- External icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
